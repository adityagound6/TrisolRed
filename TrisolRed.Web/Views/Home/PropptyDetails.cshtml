            </video>
        </div>
        <div class="container">
            <div class="hm-projectWrapper">
                <div class="heading mx-auto">
                    <h2 class="text-white">Amenities</h2>
                </div>
                <div class="hm-project-icons w-100  sys-ame">
                    <ul class="list-inline">
                        <li>
                            <section>
                                <div class="img-fluid"><img src="~/images/icons/yoga.png" class="filter-white" alt="yoga"></div>
                                <span>Yoga Deck</span>
                            </section>
                        </li>
                        <li>
                            <section>
                                <div class="img-fluid"><img src="~/images/icons/jogging.png" class="filter-white" alt="Jogging Track"></div>
                                <span>Jogging Track</span>
                            </section>
                        </li>
                        <li>
                            <section>
                                <div class="img-fluid"><img src="~/images/icons/play-area.png" class="filter-white" alt="Kids Play Area"></div>
                                <span>Kids Play Area</span>
                            </section>
                        </li>
                        <li>
                            <section>
                                <div class="img-fluid"><img src="~/images/icons/swimming-pool.png" class="filter-white" alt="swimming-pool"></div>
                                <span>Swimming Pool</span>
                            </section>
                        </li>
                        <li>
                            <section>
                                <div class="img-fluid"><img src="~/images/icons/tennis.png" class="filter-white" alt="tennis"></div>
                                <span>Tennis Court</span>
                            </section>
                        </li>
                    </ul>
                    <ul class="list-inline">
                        <li>
                            <section>
                                <div class="img-fluid"><img src="~/images/icons/gym.png" class="filter-white" alt="Gymnasium"></div>
                                <span>Gymnasium</span>
                            </section>
                        </li>
                        <li>
                            <section>
                                <div class="img-fluid"><img src="~/images/icons/club.png" class="filter-white" alt="Clubhouse"></div>
                                <span>Clubhouse</span>
                            </section>
                        </li>
                        <li>
                            <section>
                                <div class="img-fluid"><img src="~/images/icons/bbq.png" class="filter-white" alt="BBQ Area"></div>
                                <span>BBQ Area</span>
                            </section>
                        </li>
                        <li>
                            <section>
                                <div class="img-fluid"><img src="~/images/icons/garden.png" class="filter-white" alt="Garden"></div>
                                <span>Garden</span>
                            </section>
                        </li>
                        <li>
                            <section>
                                <div class="img-fluid"><img src="~/images/icons/amphitheatre.png" class="filter-white" alt="Amphitheatre"></div>
                                <span>Amphitheatre</span>
                            </section>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
