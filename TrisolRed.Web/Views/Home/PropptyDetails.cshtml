@model PropertiesDetailsModelView
@{
    Layout = "~/Views/Shared/_layoutDetails.cshtml";
}
<div class="w-100 float-left">
    <a name="overview"></a>
    <div class="container_bg">
        <div class="container">
            <div class="projectAddress">
                <h2 class="text-white">Godrej Woods | Sec-43, Noida</h2>
            </div>
            <div class="row">
                <div class="col-lg-6 hm-overviewText">
                    <div class="pageHeader1">
                        <ul class="list-inline pageMenu1">
                            <li>
                                <div class="img-icons"><img src="~/images/apartments.png"></div>
                                <div>
                                    <strong>Type</strong>
                                    <span>@Model.Type</span>
                                </div>
                            </li>
                            <li>
                                <div class="img-icons"><img src="~/images/area.png"></div>
                                <div>
                                    <strong>Areas</strong>
                                    <span>@Model.area Acres</span>
                                </div>
                            </li>
                            <li>
                                <div class="img-icons"><img src="~/images/property.png"></div>
                                <div>
                                    <strong>Configurations</strong>
                                    <span>@Model.Configurations BHK</span>
                                </div>
                            </li>
                            <li>
                                <div class="img-icons"><img src="~/images/status.png"></div>
                                <div>
                                    <strong>Current Status</strong>
                                    <span>@Model.StartingPrice</span>
                                </div>
                            </li>
                            <li>
                                <div class="img-icons"><img src="~/images/approval.png"></div>
                                <div>
                                    <strong>Starting Price</strong>
                                    <span>@Model.StartingPrice Cr*</span>
                                </div>
                            </li>
                            <li>
                                <div class="img-icons"><img src="~/images/approval.png"></div>
                                <div>
                                    <strong>Rera No.</strong>
                                    <span>@Model.ReraNumber</span>
                                </div>
                            </li>
                        </ul>
                    </div>

                </div>

                <div class="align_buttons">

                    <div class="flatBtn"><a href="#formModal" data-toggle="modal"><strong>Schedule Site Visit</strong></a></div>
                    <div class="flatBtn"><a href="#formModal" data-toggle="modal"><strong>Price List</strong></a></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="w-100 float-left">
    <a name="amenities"></a>
    <div class="w-100 float-left padding amenitiesContainer animate-section2">
        <div class="videoBox">
